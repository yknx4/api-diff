@import url('https://fonts.googleapis.com/css?family=Roboto:100,100i,400,400i,700,700i');
body
  font-family 'Roboto', sans-serif
  margin 0
  padding 0
  *
    box-sizing border-box

html, body, .full-screen
  height 100%

.full-screen
  display flex
  overflow hidden
  flex-direction column
  > *
    flex 0 0 auto
    overflow scroll
  .footer
    height 50px
    background #555
    color #fff
  .main
    flex 1 1 auto
    display flex
    overflow hidden
    > *
      flex 0 0 auto
      overflow scroll
    .left
      width 20%
      background-color #ccc
    .right
      bg-color = #ddd
      dot-color = #aaa
      dot-size = 2px
      dot-space = 22px
      flex 1 1 auto
      background-color #fff
      background linear-gradient(90deg, bg-color (dot-space - dot-size), transparent 1%) center, linear-gradient(bg-color (dot-space - dot-size), transparent 1%) center, dot-color
      background-size dot-space dot-space
      padding 10px
